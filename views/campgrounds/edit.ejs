
<% include ../partials/header %>

<div class="container text-center h-100">
<h1>Edit <%=campground.name%></h1>

<form action="/campgrounds/<%= campground._id%>/?_method=PUT" method="POST">
   
              <div class="form-group row">
                <label class="col-sm-4">Name</label>
                <div class="col-sm-4">
                  <input type="text" class="form-control" name="campground[name]" value="<%= campground.name %>">
                </div>
              </div>

              <div class="form-group row">
                <label class="col-sm-4">Price</label>
                <div class="col-sm-4">
                  <input type="number" class="form-control" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01">
                </div>
              </div>

              <div class="form-group row">
                <label class="col-sm-4">Image</label>
                <div class="col-sm-4">
                  <input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>">
                </div>
              </div>

              <div class="form-group row">
                <label class="col-sm-4">Description</label>
                <div class="col-sm-4">
                  <input type="text" class="form-control" name="campground[info]" value="<%= campground.info %>">
                </div>
              </div>

        


    <input class="btn btn-primary" type="submit" value="Submit">
</form>

</div>
<% include ../partials/footer %>    