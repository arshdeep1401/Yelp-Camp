
<% include ../partials/header %>

<div class="container text-center h-100">
<h1>Add a new Comment to <%=campground.name%>!!</h1>

<form action="/campgrounds/<%=campground._id%>/comments" method="POST">
   
        <div class="form-group row">
                <label class="col-sm-4">Comment</label>
                <div class="col-sm-4">
                  <input type="text" class="form-control" name="comment[text]" placeholder="Comment">
                </div>
              </div>

              <div class="form-group row">
                <label class="col-sm-4">Author</label>
                <div class="col-sm-4">
                  <input type="text" class="form-control" name="comment[author]" placeholder="Author">
                </div>
              </div>

            
        


    <input class="btn btn-primary" type="submit" value="Submit">
</form>

</div>
<% include ../partials/footer %>    